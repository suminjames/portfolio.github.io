scss:
  #about {
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    /*background: linear-gradient(to right, rgba(0, 0, 0, 0.89), rgb(0, 0, 0)),url("./images/hair-bun.jpg");*/
    /*background-size: cover;*/
    /*background-position: center;*/
  }

  #intro{
    background: linear-gradient(to right, rgba(0, 0, 0, 0.89), rgb(0, 0, 0)), url("./images/hair-bun.jpg");
    background-size: cover;
    background-position: center;
  }
  
  #about .body a {
    border: 2px solid white;
    color: white;
    font-size: 24px;
    font-weight: 500;
    text-decoration: none;
    transition: 0.5s;
  }

  #about .body a:hover {
    background: #ff0;
    border: 2px solid #ff0;
    color: black;
  }

  #about .body span {
    color: #ff0;
  }

  .display-image {
    background: url("./images/hair-bun.jpg");
    background-size: cover;
    height: 100%;
    width: 100%;
    transition: 1s;
    position: relative;
  }

  .display-image:hover {
    width: 100%;
    height: 50%;
  }

  .display-image:hover .outline-box {
    width: 100%;
    height: 100%;
    top: -10px;
    left: -10px;
    position: absolute;
    border: 2px solid white;
    z-index: -1;
  }

  .display-image:hover .outline-box:after {
    content: '';
    position: absolute;
    top: -2px;
    bottom: -2px;
    left: -2px;
    right: -2px;
    background: linear-gradient(235deg, #ff0, #0000fd);
    filter: blur(8px)
  }
